---
const { headerText = "LEARN MORE", descriptionText = "", buttonText = "CHECK AVAILABILITY", linkUrl = "#" } = Astro.props;
---

<section class="divider-block text-center text-white">
  <div class="container">
    <h1 class="display-1 fw-bold">{headerText}</h1>
    <p class="lead">{descriptionText}</p>
    <a href={linkUrl} class="btn btn-lg btn-primary">{buttonText}</a>
  </div>
</section>

<style>
  .divider-block {
    background-color: black;
    padding: 100px 20px;
  }
  .divider-block p{
    color: #ccc;
    font-size: 1.25rem;
    margin-bottom: 30px;
    max-width: 1200px;
    margin-left: auto;
    margin-right: auto;
  }
</style>
