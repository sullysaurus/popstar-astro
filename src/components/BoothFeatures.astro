---
const { headerText, cards } = Astro.props;
---

<section class="divider-block">
  <h1>{headerText}</h1>
  <div class="card-container">
    {cards.map((card, index) => (
      <div class="card-wrapper" key={index}>
        <div class="card">
          <div class="card-icon">
            <img src={card.iconSrc} alt={card.iconAlt} />
          </div>
          <h2>{card.title}</h2>
          <p>{card.description}</p>
        </div>
        {index < cards.length - 1 && <div class="divider"></div>}
      </div>
    ))}
  </div>
</section>

<style>
  .divider-block {
    background-color: white;
    text-align: center;
    padding: 50px 20px;
  }
  .divider-block h1 {
    font-size: 2.5rem;
    font-weight: bold;
    margin-bottom: 40px;
  }
  .card-container {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
  }
  .card-wrapper {
    display: flex;
    align-items: center;
    flex: 1;
    justify-content: center;
    max-width: 25%; /* Ensure even spacing */
  }
  .card {
    padding: 20px;
    text-align: center;
    border: none; /* Remove card border */
  }
  .divider {
    height: 60%;
    border-left: 1px solid #ccc;
    margin-left: 20px;
  }
  .card-icon {
    margin-bottom: 15px;
  }
  .card-icon img {
    width: 50px;
    height: 50px;
  }
  .card h2 {
    font-size: 1.25rem;
    font-weight: bold;
    margin-bottom: 10px;
  }
  .card p {
    font-size: 1rem;
    color: #6c757d;
  }

  @media (max-width: 768px) {
    .card-container {
      flex-direction: column;
      align-items: center;
    }
    .card-wrapper {
      max-width: 100%;
      margin-bottom: 20px;
    }
    .divider {
      display: none;
    }
  }
</style>
