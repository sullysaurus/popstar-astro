---
const { headerText, descriptionText, buttonText, linkUrl } = Astro.props;
---

<section class="divider-block text-center">
  <div class="container">
    <h1 class="display-3 fw-bold">{headerText}</h1>
    <p class="lead text-muted">{descriptionText}</p>
    <a href={linkUrl} class="btn btn-lg btn-primary">{buttonText}</a>
  </div>
</section>

<style>
  .divider-block {
    background-color: white;
    padding: 100px 20px;
  }
</style>
