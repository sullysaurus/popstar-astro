---
const { headerText = "LEARN MORE", descriptionText = "", buttonText = "CHECK AVAILABILITY", linkUrl = "#" } = Astro.props;
---

<section class="divider-block text-center text-white">
  <div class="container">
    <h1 class="display-1 fw-bold header-underline">{headerText}</h1>
    <p class="lead">{descriptionText}</p>
  </div>
</section>

<style>
  .divider-block {
    background-color: black;
    padding: 100px 20px;
  }
  .divider-block .header-underline {
    position: relative;
    display: inline-block;
    margin-bottom: 30px; /* Space between header and paragraph */
  }
  .divider-block .header-underline::after {
    content: '';
    position: absolute;
    width: 60px; /* Adjust width as needed */
    height: 5px; /* Adjust height as needed */
    background-color: yellow;
    bottom: -10px; /* Position the underline */
    left: 50%;
    transform: translateX(-50%);
  }
  .divider-block p {
    color: #ccc;
    font-size: 1.25rem;
    margin-bottom: 30px;
    max-width: 600px; /* Narrower paragraph */
    margin-left: auto;
    margin-right: auto;
  }
</style>
