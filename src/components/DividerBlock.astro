---
const {
  headerText = "LEARN MORE",
  headerTextColor = "white",
  headerFontSize = "display-1",
  descriptionText = "",
  descriptionTextColor = "#ccc",
  descriptionFontSize = "lead",
  buttonText = "Get Prices",
  buttonTextColor = "white",
  linkUrl = "https://popstar-photo-booths.checkcherry.com/reservation/set_event?event_category_id=17207",
  bgColor = "black",
  topMargin = "100px",
  bottomMargin = "100px"
} = Astro.props;
---

<section class="divider-block text-center" style={`background-color: ${bgColor}; padding: ${topMargin} 20px ${bottomMargin}`}>
  <div class="container">
    <h1 class={`fw-bold header-underline ${headerFontSize} ${headerFontSize}-md`} style={`color: ${headerTextColor};`}>{headerText}</h1>
    {descriptionText && <p class={`lead ${descriptionFontSize}-md`} style={`color: ${descriptionTextColor};`}>{descriptionText}</p>}
    {buttonText && <a href={linkUrl} class={`btn btn-lg btn-primary ${buttonText}-md`} style={`color: ${buttonTextColor};`}>{buttonText}</a>}
  </div>
</section>

<style>
  .divider-block .header-underline {
    position: relative;
    display: inline-block;
    margin-bottom: 30px; /* Space between header and paragraph */
  }
  .divider-block .header-underline::after {
    content: '';
    position: absolute;
    width: 60px; /* Adjust width as needed */
    height: 5px; /* Adjust height as needed */
    background-color: yellow;
    bottom: -10px; /* Position the underline */
    left: 50%;
    transform: translateX(-50%);
  }
  .divider-block p {
    margin-bottom: 30px;
    max-width: 600px; /* Narrower paragraph */
    margin-left: auto;
    margin-right: auto;
  }
  @media (max-width: 767.98px) {
    .display-1-md { font-size: 2.5rem !important; }
    .display-2-md { font-size: 2.0rem !important; }
    .lead-md { font-size: 1.0rem !important; }
    .btn-md { font-size: 0.875rem !important; }
  }
</style>
