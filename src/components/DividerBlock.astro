---
const { headerText, descriptionText, buttonText } = Astro.props;
---
<section class="divider-block">
  <h1>{headerText}</h1>
  <p>{descriptionText}</p>
  <button>{buttonText}</button>
</section>

<style>
  .divider-block {
    background-color: white;
    text-align: center;
    padding: 200px 20px;
  }
  .divider-block h1 {
    font-size: 2.5rem;
    font-weight: bold;
    margin-bottom: 20px;
  }
  .divider-block p {
    font-size: 1.25rem;
    color: #6c757d;
    margin-bottom: 30px;
    max-width: 1200px;
    margin-left: auto;
    margin-right: auto;
  }
  .divider-block button {
    background-color: black;
    color: white;
    border: none;
    padding: 10px 20px;
    font-size: 1rem;
    cursor: pointer;
  }
  .divider-block button:hover {
    background-color: #333;
  }
</style>
