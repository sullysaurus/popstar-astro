---
const { imgSrc, imgAlt, title, subtitle, header, description } = Astro.props;
---
<section class="py-5">
  <div class="container col-xxl-8 px-4">
    <div class="row align-items-center g-5 py-5">
      <div class="col-lg-6 order-lg-2">
        <img src={imgSrc} class="d-block mx-lg-auto img-fluid rounded mb-3" alt={imgAlt} width="700" height="500" loading="lazy" />
      </div>
      <div class="col-lg-6 order-lg-1">
        <div class="text-center text-lg-start">
          <h2 class="display-6 fw-bold lh-1 mb-3">{header}</h2>
          <h1 class="display-5 fw-bold lh-1 mb-3">
            <span class="highlight">Popstar Photo Booths</span> {subtitle}
          </h1>
          <p class="lead mb-4">{description}</p>
          <div class="mt-3 hashtag">
            <span class="fw-bold">#POPSTARPHOTOBOOTHS</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .highlight {
    background-color: #FFD700;
    padding: 0 5px;
  }
  .hashtag {
    font-family: 'Arial', sans-serif;
    font-size: 1.5rem;
    color: #000;
  }
</style>
