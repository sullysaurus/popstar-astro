---
const {
  headerText = "North Carolina's Hottest 360 Booth",
  descriptionText = "LIMITED SPOTS AVAILABLE FOR BUSY DATES IN 2024. Check Availability!",
  buttonText = "Check Availability!",
  linkUrl = "https://popstar-photo-booths.checkcherry.com/reservation/start",
  reviewText = "Read Reviews â†’",
  featureText = "FEATURED ON",
  featureImages = [
    { src: "/images/branding/theknot.png", alt: "theknot" },
    { src: "/images/branding/weddingwire.png", alt: "weddingwire" },
  ],
  backgroundImage = "/images/booths/360/silver-room.webp"
} = Astro.props;

import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import DividerBlock from "../components/DividerBlock.astro";
import Gallery4 from "../components/Gallery4.astro";
import BoothFeatures from "../components/BoothFeatures.astro";
import BookNowDivider from "../components/BookNowDivider.astro";
import About from "../components/About.astro";
import ReviewsWidget from "../components/ReviewsWidget.astro";
import ThreeSixtyBooths from "../components/ThreeSixtyBooths.astro";

const photos = [
  { src: "/images/booths/360/couple.jpeg", alt: "Photo 1" },
  { src: "/images/booths/360/glitter.jpeg", alt: "Photo 2" },
  { src: "/images/booths/360/purple.jpeg", alt: "Photo 3" },
  { src: "/images/booths/360/silver.jpeg", alt: "Photo 4" },
];

const cards = [
  {
    iconSrc: "/images/booths/prints.png",
    iconAlt: "Custom Photo Overlay",
    title: "CUSTOM OVERLAY",
    description: "Special messages, event dates or branding",
  },
  {
    iconSrc: "/images/booths/gallery.png",
    iconAlt: "Online Gallery",
    title: "ONLINE GALLERY",
    description:
      "A personalized gallery for guests to download free digital copies",
  },
  {
    iconSrc: "/images/booths/attendant.png",
    iconAlt: "Popstar Attendant",
    title: "ATTENDANT",
    description: "To set-up, breakdown and make sure things runs smoothly",
  },
  {
    iconSrc: "/images/booths/screen.png",
    iconAlt: "Welcome Screen",
    title: "CUSTOM TAP TO START SCREEN",
    description: "Supports photos, videos and custom artwork",
  },
];
---

<Layout title="Popstar Photo Booths | Raleigh | Durham | Surrounding Areas">
  <main>
    <Header
      headerText={headerText}
      descriptionText={descriptionText}
      buttonText={buttonText}
      linkUrl={linkUrl}
      reviewText={reviewText}
      featureText={featureText}
      featureImages={featureImages}
      backgroundImage={backgroundImage}
    />
    <ThreeSixtyBooths />
    <DividerBlock
      headerText="The 360 Booth"
      descriptionText="Step into the future of photography with our 360 Booth. It's easy to use, instantly shares your photos, and delivers immersive, social media-ready images in seconds."
      buttonText="Check Availability"
      linkUrl="https://popstar-photo-booths.checkcherry.com/reservation/set_event?event_type_id=99889"
    />
    <Gallery4 photos={photos} />
    <BoothFeatures headerText="The 360 Booth Includes" cards={cards} />
    <About />
    <ReviewsWidget />
    <BookNowDivider
      headerText="LEARN MORE"
      descriptionText="Elevate your event with our 360 Booth."
      buttonText="Check Availability"
      linkUrl="https://popstar-photo-booths.checkcherry.com/reservation/set_event?event_type_id=99889"
    />
  </main>
</Layout>
