---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import CTA from "../components/CTA.astro";
import Booths from "../components/Booths.astro";
import Form from "../components/Form.astro";
import Customize from "../components/Customize.astro";
import About from "../components/About.astro";
import Partners from "../components/Partners.astro";
import ReviewsWidget from "../components/ReviewsWidget.astro";
import Gallery4 from "../components/Gallery4.astro";
import BoothFeatures from "../components/BoothFeatures.astro";
import FullWidthSplit from "../components/FullWidthSplit.astro";
import DividerBlock from "../components/DividerBlock.astro";
import BookNowDivider from "../components/BookNowDivider.astro";

const booths = [
  {
    mediaType: "video",
    mediaSrc: "/images/booths/popstar.mp4",
    alt: "Popstar Booth",
    title: "Popstar Booth",
    description: "Digital iPad Booth. Shares instantly to private gallery. Printing add on available.",
    buttonAction: "document.getElementById('form-section').scrollIntoView({ behavior: 'smooth' });"
  },
  {
    mediaType: "video",
    mediaSrc: "/images/booths/rockstar.mp4",
    alt: "Rockstar Booth",
    title: "Rockstar Booth",
    description: "Professional camera and lighting. Color or black & white prints.",
    buttonAction: "document.getElementById('form-section').scrollIntoView({ behavior: 'smooth' });"
  },
  {
    mediaType: "video",
    mediaSrc: "/images/booths/tortilla.mp4",
    alt: "360 Booth",
    title: "360 Booth",
    description: "Experience immersive 360Â° videos. Instantly share your videos.",
    buttonAction: "document.getElementById('form-section').scrollIntoView({ behavior: 'smooth' });"
  }
];

const photos = [
  { src: "/images/branding/look-7.jpg", alt: "Photo 1" },
  { src: "/images/branding/look-8.jpg", alt: "Photo 2" },
  { src: "/images/branding/look-3.jpg", alt: "Photo 3" },
  { src: "/images/branding/look-9.jpg", alt: "Photo 4" },
];

const cards = [
  {
    iconSrc: "/images/booths/prints.png",
    iconAlt: "Custom Photo Overlay",
    title: "CUSTOM OVERLAY",
    description: "Special messages, event dates or branding",
  },
  {
    iconSrc: "/images/booths/gallery.png",
    iconAlt: "Online Gallery",
    title: "ONLINE GALLERY",
    description:
      "A personalized gallery for guests to download free digital copies",
  },
  {
    iconSrc: "/images/booths/backdrops-props.png",
    iconAlt: "Backdrops / Props",
    title: "BACKDROPS / PROPS",
    description:
      "We have a large selection ready on-hand for you to choose from",
  },
  {
    iconSrc: "/images/booths/screen.png",
    iconAlt: "Welcome Screen",
    title: "CUSTOM TAP TO START SCREEN",
    description: "Supports photos, videos and custom artwork",
  },
];
---

<Layout title="Popstar Photo Booths | Raleigh | Durham | Surrounding Areas">
  <Header
    title="We Make You"
    subtitle="Look Good"
    backgroundImage="/images/branding/header.jpeg"
  />
  <main>
    <CTA
      title="Looking For a Photo Booth in Raleigh?"
      description="If you are looking for a photo booth where the photos are awesome and the experience is just as fun, look no further. Reach out to Danny to see how we can enhance your next event."
      imagePaths={[
        { src: "/images/branding/theknot.png", alt: "The Knot" },
        { src: "/images/branding/weddingwire.png", alt: "WeddingWire" },
      ]}
    />
    <Booths booths={booths} />
    <Form emContent="Step 2:" title="Tell Us About Your Event!" />
    <Customize />
    <FullWidthSplit
    imageSrc="/images/branding/best-image.jpg"
    headerText="Why Choose Us?"
    paragraphText="Popstar Photo Booths Was Built To Offer The Absolute Best Image Quality."
  />
  <DividerBlock
    headerText="Search No Further..."
    descriptionText="We Create Professional Photos That Look Really Good & An Experience That Your Guest Will Remember!"
    buttonText="CHECK AVAILABILITY"
    linkUrl="/inquiry"
  />
  <Gallery4 photos={photos} />
  <BoothFeatures headerText="All Booths Include" cards={cards} />
  <BookNowDivider
    headerText="CHECK DATE"
    descriptionText="Popular Dates Get Snatched Up Quickly. Act Now To Secure Your Date!"
    buttonText="Check Availability"
    linkUrl="/inquiry"
  />
    <About />
    <Partners />
    <ReviewsWidget />
  </main>
</Layout>
